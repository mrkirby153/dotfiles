#!/bin/bash

# Define primary monitor
primary="HDMI-0"

# Kill all polybar instances
killall polybar
sleep 0.5

# Start up poybar on all the monitors
if type "xrandr"; then
    for m in $(xrandr --query | grep " connected" | cut -d" " -f1); do
        if [ $m = $primary ]; then
            bar="primary"
        else
            bar="secondary"
        fi
        echo "Starting $bar on $m"
        MONITOR=$m polybar --reload $bar &
    done
else
    polybar --reload &
fi
