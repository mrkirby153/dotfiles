#!/bin/sh
SPEAKERS=$(jq -r '.speakers' ~/.pypulse.json)
HEADPHONES=$(jq -r '.headphones' ~/.pypulse.json)

[ "$(pamixer --get-mute)" = true ] && echo "󰝟 " && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
    icon="󰕾"
elif [ "$vol" -lt "30" ]; then
    icon=""
else
    icon="󰖀"
fi

sink=""
default=$(pamixer --get-default-sink | tail -n 1 | awk '{print $2}' | tr -d '"')
if [ "$default" = "$SPEAKERS" ]; then
    sink="S"
elif [ "$default" = "$HEADPHONES" ]; then
    sink="H"
fi
if [ "$vol" -eq "100" ]; then
    echo "$icon $sink"
else
    echo "$icon $sink $vol%"
fi
