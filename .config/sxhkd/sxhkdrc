super + z
    firefox
super + shift + z
    firefox --private-window

super + n
    thunar

super + shift + n
    st -e ranger

super + g
    galculator

super + s
    ~/.local/bin/screenshot -r 2> /tmp/screenshot_log.log

super + shift + s
    ~/.local/bin/screenshot --record

shift + XF86AudioPlay
    pavucontrol

shift + XF86AudioLowerVolume
    ~/.local/bin/pypulse -s

shift + XF86AudioRaiseVolume
    ~/.local/bin/pypulse -p

{XF86AudioPlay, XF86AudioNext, XF86AudioPrev}
    playerctl -p playerctld {play-pause, next, previous}

super + Pause
    ~/.local/bin/power_menu

super + d
    j4-dmenu-desktop --dmenu="$(which dmenu) -l 20 -i" --display-binary

super + r
    dmenu_run -l 20 -i

super + o
    ~/.local/bin/dual_monitor

super + shift + o
    ~/.local/bin/single_monitor
